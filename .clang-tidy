  # Readability / const correctness
  readability-*,
  misc-const-correctness,
  readability-make-member-function-const,

  # Modern C++
  modernize-*,
  modernize-use-nullptr,
  modernize-use-override,
  modernize-use-using,

  # Performance
  performance-*,

  # Core Guidelines (subset â€“ CLion-like)
  cppcoreguidelines-*,
